{
  "search.useIgnoreFiles": true,
  "search.useGlobalIgnoreFiles": true,
  "search.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "public/**": true,
    "resources/**": true,
    "themes/**/exampleSite/**": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "public": true,
    "resources": true,
    "themes/**/exampleSite": true
  },
  "files.watcherExclude": {
    "public/**": true,
    "resources/**": true
  },
  "editor.semanticHighlighting.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "[markdown]": {
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    },
    "editor.linkedEditing": true,
    "editor.suggest.insertMode": "insert",
    "editor.suggest.showSnippets": true
  },
  "stylelint.validate": [
    "css",
    "scss"
  ],
  "markdownlint.config": "${workspaceFolder}/.markdownlint.yaml",
  "vale.coreStylesPath": "${workspaceFolder}/.vale/styles",
  "vale.valeCLI.path": "vale",
  "yaml.customTags": [
    "!reference scalar"
  ],
  "yaml.format.enable": true
}
